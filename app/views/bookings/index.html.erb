<p id="notice"><%= notice %></p>

<h2>My bookings</h2>


<h3>Previous Bookings</h3>
<table class="table">
  <thead>
    <tr>
      <th>Room number</th>
      <th>Datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prev.each do |booking| %>
      <tr>
        <td><%= booking.room_number %></td>
        <td><%= booking.datetime %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Upcoming Bookings</h3>
<table class="table">
  <thead>
    <tr>
      <th>Room number</th>
      <th>Datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming.each do |booking| %>
      <tr>
        <td><%= booking.room_number %></td>
        <td><%= booking.datetime %></td>
        <td><%= link_to ' Cancel Booking', booking, method: :delete, data: { confirm: 'Are you sure of cancel?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


