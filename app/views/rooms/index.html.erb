<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Room number</th>
      <th>Building</th>
      <th>Size</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.building %></td>
        <td><%= room.size %></td>
        <td><%= room.status %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Change Room Details', edit_room_path(room) %></td>
        <td><%= link_to 'Delete Room', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

